<div class="video" data-module="video/Video" data-trigger-selector="[data-element='trigger']" data-target-selector="[data-element='target']">
  <button class="video__trigger" type="button" data-element="trigger">
    <div class="video__trigger-inner">
      <span class="screenreader">{{ screenReaderText }}</span>
      {%- component 'icons/play' -%}
    </div>
  </button>

  <div class="video__container" data-element="target">
    <figure class="video__figure">
      <video class="video__src">
        {% if mp4Src %}
          <source src="{{ mp4Src }}" type="video/mp4">
        {% endif %}

        {% if mp4Src %}
          <source src="{{ webmSrc }}" type="video/webm">
        {% endif %}

        <p class="video__no-support-text">{{ fallbackText }}</p>
      </video>

      <figcaption class="video__caption">
        <p class="video__caption-text">{{ caption }}</p>

        <div class="video__caption-meta">
          {%- component 'meta', meta -%}
        </div>
      </figcaption>
    </figure>

    <div class="video__download">
      {%- component 'download' -%}
    </div>
  </div>
</div>
